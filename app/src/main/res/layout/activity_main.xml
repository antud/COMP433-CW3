<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.example.cw3.MyDrawingArea
        android:id="@+id/drawing_area"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10pt"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tags_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10pt"
            android:text="Tags: "/>
        <EditText
            android:id="@+id/tag_edit_text_box"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginLeft="10pt"
            android:autofillHints="tags" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:text="Clear"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="onClear"/>
        <Button
            android:id="@+id/save_camera_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"

            android:text="Save"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="saveDrawing"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/search_for_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:text="Find"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="searchTags"/>
        <EditText
            android:id="@+id/tag_search_edit_box"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="85"
            android:inputType="text"
            android:layout_marginLeft="10pt"
            android:autofillHints="tags" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/top_small_image"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/top_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mid_small_image"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/mid_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bot_small_image"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/bot_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>
    </LinearLayout>
    <com.example.cw3.MyDrawingArea
        android:id="@+id/blank_drawing_area"
        android:layout_width="1dp"
        android:layout_height="1dp"

        android:scaleType="fitCenter" />




</LinearLayout>